{{ vault_web_domain }} {
    encode gzip

    # API proxy to bot
    handle /api/* {
        reverse_proxy localhost:3000
    }

    # WebSocket proxy
    handle /ws {
        reverse_proxy localhost:3000
    }

    # Static files (SPA)
    handle {
        root * /home/{{ ansible_user }}/pai-web
        try_files {path} /index.html
        file_server
    }
}
